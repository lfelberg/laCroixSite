<h2>Add a new La Croix tasting entry</h2>

<div class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label">Flavor</label>
    <div class="col-sm-10">
      <select clas="form-control">
        {{#each model.flavors as |flavor|}}
          <option value={{flavor.id}}>{{flavor.flavor}}</option>
        {{/each}}
      </select>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">User name</label>
    <div class="col-sm-10">
      {{input type="text" value=model.tastings.username class="form-control" placeholder="User"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Tasting notes</label>
    <div class="col-sm-10">
      {{textarea value=model.tastings.notes class="form-control" placeholder="Notes"}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default" {{action 'saveNote' model.tastings}}>Add tasting</button>
    </div>
  </div>
</div>